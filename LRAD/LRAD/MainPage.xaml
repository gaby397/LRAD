<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LRAD.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Bienvenido a Programacion RAD!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Entry x:Name="txtcodigo" Placeholder="Ingrese codigo" Keyboard="Text" />
        <Entry x:Name="txtnombres" Placeholder="Ingrese Nombres" Keyboard="Text" />
        <Entry x:Name="txtapellidos" Placeholder="Ingrese apellidos" Keyboard="Text" />
        <Entry x:Name="txttelefono" Placeholder="Ingrese telefono" Keyboard="Telephone" />
        <Entry x:Name="txtcorreo" Placeholder="Ingrese e-mail" Keyboard="Email" />
        <Button x:Name="btnagregar" Text="Salvar" Clicked="btnagregar_Clicked"/>
        <Button x:Name="btnsegunda" Text="Ir a pagina" Clicked="btnsegunda_Clicked"/> 


    </StackLayout>

</ContentPage>
